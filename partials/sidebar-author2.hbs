{{#author}}
<section style="" class="row margin-bottom-30 hidden-xs" itemscope itemtype="http://schema.org/Person">
  {{#if image}}
    <figure class="col-sm-offset-1 col-sm-10 text-center">
      <div class="row">
          <div>
              <img src="{{image}}" class="img-responsive"/>
          </div>
      </div>
    </figure>
  {{/if}}
  <section class="col-sm-offset-1 col-sm-10 post-author-detail sidebar-box">
    <h5 class="pt15 sidebar-post-title text-center">
        <a href="{{url}}" class="lead"><span itemprop="name">{{name}}</span></a>
    </h5>
    {{#if bio}}
      <p class="mb15 mt15 text-center" itemprop="description">{{bio}}</p>
     {{/if}}
  </section>

</section>
{{/author}}
