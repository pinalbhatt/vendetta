{{> "fancyHeader"}}
<div class="row priority post-list-container-container">
	<main role="main" class="col-md-10 col-md-offset-1 ptb50  post-list-container">
        {{> "pbdesk-panel"}}
        <div class="row text-center" style="max-height: 100px">
            {{> "advertisement"}}
        </div>
        {{! #get "tags" limit="all"}}{{! tags}}{{! /get}}
        <div class="row text-center">
            <h2 class="post-title pt30">My Posts</h2>
            <div class="inline-block-middle" style="border-top:solid 3px #1995dc; margin-right:10px;width:50px;"></div>
        </div>
		{{! The tag below includes the post loop - partials/loop.hbs }}
		<div class="row">
		    {{> "loop"}}
	    </div>
        {{pagination}}
	</main>
</div>
<div class="container">
	<div class="row well text-center">
		{{> "advertisement"}}
	</div>
</div>
